 = stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true
 = javascript_include_tag "application", "data-turbolinks-track" => true
 %title= yield(:title)

%body
 = render "layouts/header"
 
 - if !signed_in? && current_page?(root_path)
  .logo
   %img.ruby-logo{src:"/images/ruby_logo.png"}
   %h1.h1-main-page Что почитать о Rails
   %p.header-explanation *демонстрационное наполнение

 .wrap
  .row
   = render "layouts/content"
   = render "layouts/sidebar" if !signed_in? && @show_sidebar == true 
   
 = render "layouts/footer" if !signed_in?
