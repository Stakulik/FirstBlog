- if signed_in?
  %li.art-list-signed
    .row
      .art-title-signed.col-xs-12.col-sm-4.col-md-4
        = raw truncate(article.title, length: 30)
      .art-id-signed.col-xs-12.col-sm-2.col-md-2
        ID статьи: 
        = article.id
      .art-btns-signed.col-xs-12.col-sm-7.col-md-6
        = button_to "#{ article.status == true ? "В черновики" : "Опубликовать" }", public_article_path(article.id), method: "put", class: "#{ true == article.status ? "btn btn-warning" : "btn btn-success" }"
        = button_to "Изменить", edit_article_path(article.id), method: "get", class: "btn btn-info"
        - if current_user.admin?
          = button_to "Удалить", article, method: "delete", data: {confirm: 'Уверены?'}, class: "btn btn-danger"
- else
  - if true == article.status 
    %li
      .art-prev
        %h1.title-art-prev= link_to "#{article.title}", article_path(article.id)
        %p.content-art-prev= raw article.content.first(180)