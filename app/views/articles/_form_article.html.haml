= form_for @article do |f|
  = render partial: 'layouts/error_messages', locals: {zone: @article}
  = f.text_field :title, size: "61", placeholder: "Min 10 symb."
  %br
  = f.bootsy_area :content, size: "60x12", placeholder: "Min 10 symb."
  %br
  = f.select :status, options_for_select([["Опубликовать", "true"], ["Черновик", "false"]])
  %br
  %br
  - if @article.new_record?
    = f.submit "Создать"
  - else
    = f.submit "Сохранить"